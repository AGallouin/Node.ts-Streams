{
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "strict": true,
    "lib": ["dom", "es2017", "esnext", "es2019", "es2019.object"],
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "target": "es2022",
    "rootDir": "src",
    "outDir": "build",
    "types": ["node", "jest"]
  },
  "exclude": ["**/build/**/*", "node_modules", "**/node_modules/*", "**/.rollup.cache/*"]
}
